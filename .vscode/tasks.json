{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build current file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++14",
                "-o",
                "a.out",
                "${relativeFile}"
            ],
            "group": {
                 "kind": "build",
                 "isDefault": true
             },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}